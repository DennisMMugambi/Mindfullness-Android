<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_517dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            app:cardBackgroundColor="@color/appBlue"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_details"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginTop="@dimen/_9dp"
                    android:layout_marginStart="@dimen/_18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month_year"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/top_card"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/month_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/april_2022"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:textAlignment="center"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            android:layout_marginStart="@dimen/_30dp"
            android:layout_marginEnd="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/top_card"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/bride_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bride_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/month_year"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bride_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/month_year"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/groom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groom_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/bride_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/groom_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:text=""
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/bride_name_value"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/bride_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bride_id"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/groom_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bride_id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:text=""
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/groom_name_value"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/groom_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groom_id"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/bride_id"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/groom_id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:text=""
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/bride_id_value"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/wedding_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wedding_date"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/groom_id"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/wedding_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:text=""
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/groom_id_value"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/payment_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_mode"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/wedding_date"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/payment_mode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:text=""
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/wedding_date_value"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/provider"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/payment_mode"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/provider_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:text=""
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/payment_mode_value"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_number"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/provider"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/mobile_number_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:text=""
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/provider_value"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:layout_marginStart="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile_number"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sp"
            android:text=""
            android:layout_marginEnd="@dimen/_18dp"
            android:fontFamily="@font/nunitosansbold"
            android:layout_marginTop="@dimen/_13dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile_number_value"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            android:background="@drawable/btn_blue"
            android:text="@string/dismiss"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sp"
            android:textAlignment="center"
            android:theme="@style/Button2Theme"
            app:backgroundTint="@color/appBlue"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_marginTop="@dimen/_27dp"
            android:layout_marginBottom="@dimen/_18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount_value"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

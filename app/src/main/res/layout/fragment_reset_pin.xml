<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.changeDefaultOTP.ResetPinFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appGray"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pin_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26dp"
                android:text="@string/change_default_pin"
                android:textSize="@dimen/_16sp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@android:color/black"
                android:textAlignment="textStart"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginTop="@dimen/_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pin_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_72dp"
                tools:text="@string/default_pin_description"
                android:textSize="@dimen/_14sp"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginEnd="@dimen/_14dp"
                android:layout_marginTop="@dimen/_12dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/welcomeGray"
                android:textAlignment="textStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pin_title" />

            <TextView
                android:id="@+id/otp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="@dimen/_14sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pin_description"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pin_hint"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginEnd="@dimen/_14dp"
                app:passwordToggleEnabled="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/otp_tv"
                style="@style/LoginTextInputLayoutStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textSize="@dimen/_14sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/repeat_pin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_pin"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="@dimen/_14sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginTop="@dimen/_26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/otp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pin_hint"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginEnd="@dimen/_14dp"
                app:passwordToggleEnabled="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repeat_pin_tv"
                style="@style/LoginTextInputLayoutStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_pin_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_14sp"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:fontFamily="@font/poppins"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/confirm_pin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_pin"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="@dimen/_14sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginTop="@dimen/_26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_pin"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pin_hint"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginEnd="@dimen/_14dp"
                app:passwordToggleEnabled="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirm_pin_tv"
                style="@style/LoginTextInputLayoutStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirm_pin_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_14sp"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:fontFamily="@font/poppins"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_40dp"
                android:layout_marginEnd="@dimen/_14dp"
                android:layout_marginStart="@dimen/_14dp"
                android:layout_marginBottom="@dimen/_40dp"
                android:background="@drawable/btn_blue"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sp"
                android:theme="@style/Button2Theme"
                android:bottomRightRadius="5dp"
                android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                app:backgroundTint="@color/appBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>